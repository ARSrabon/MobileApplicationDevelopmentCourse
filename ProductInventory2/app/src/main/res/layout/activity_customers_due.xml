<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customers_due"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.productinventory.activities.CustomersDueActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorsPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <TextView
        android:id="@+id/lbl_customer"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        style="@style/my_lbl_views"
        android:text="Enter Customer Id:"/>

    <EditText
        android:id="@+id/edit_customer_id"
        android:layout_below="@+id/lbl_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_showdues"
        android:layout_below="@+id/edit_customer_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Now"/>

    <TextView
        android:id="@+id/txt_showcustomerdues"
        android:layout_below="@+id/btn_showdues"
        android:layout_width="match_parent"
        style="@style/my_lbl_views" />

</RelativeLayout>
