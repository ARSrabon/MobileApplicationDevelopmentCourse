<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_details_view_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.msrabon.productinventory.activities.ProductDetailsView">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_purple"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_pname"
                style="@style/my_lbl_view"
                android:text="Product Name: " />

            <TextView
                android:id="@+id/view_productname"
                style="@style/my_lbl_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_pid"
                style="@style/my_lbl_view"
                android:text="Product ID: " />

            <TextView
                android:id="@+id/view_productid"
                style="@style/my_lbl_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_pprice"
                style="@style/my_lbl_view"
                android:text="Product Price: " />

            <TextView
                android:id="@+id/view_productprice"
                style="@style/my_lbl_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_pstock"
                style="@style/my_lbl_view"
                android:text="Product Stock: " />

            <TextView
                android:id="@+id/view_productstock"
                style="@style/my_lbl_view" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn_stockupdater"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stock Update"
                android:layout_weight="1" />
            <Button
                android:id="@+id/btn_product_sell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sell"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
